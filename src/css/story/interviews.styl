.interviews
  width 100%
  display flex
  flex-wrap wrap
  justify-content center
  align-self flex-start

.note
  width 48%
  @media screen and (max-width: 600px)
    width 90%
  padding 2px 20px
  margin 5px
  background-color white
  border-radius 5px
  font-size .8em
  p
    margin-top 15px
    font-family $atlas
  b, em
    font-family $publico
